# HRIS Backend Environment Variables
# Copy this file to .env and fill in the values

# ========= DATABASE =========
DATABASE_URL=jdbc:postgresql://your-host:6543/postgres?prepareThreshold=0
DATABASE_USERNAME=your-db-username
DATABASE_PASSWORD=your-db-password

# ========= JWT =========
JWT_SECRET_KEY=your-jwt-secret-base64-encoded
JWT_EXPIRATION=86400000

# ========= SUPABASE =========
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_STORAGE_URL=https://your-project.storage.supabase.co/storage/v1/s3
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_BUCKET=hris-bucket
SUPABASE_REGION=ap-south-1
SUPABASE_S3_ACCESS_KEY=your-s3-access-key
SUPABASE_S3_SECRET_KEY=your-s3-secret-key

# ========= SERVER =========
PORT=8080

# ========= JPA =========
JPA_SHOW_SQL=false
JPA_DDL_AUTO=update


